sudo apt-get install sasl2-bin g++
sudo apt-get install libssl-dev libcrypto++-dev
<==========
cd node_module
wget https://github.com/Blizzard/node-rdkafka/archive/v2.2.2.tar.gz
tar xvf v2.2.2.tar.gz
mv node-rdkafka-2.2.2 node-rdkafka
cd node-rdkafka/
cd deps/
wget https://github.com/edenhill/librdkafka/archive/v0.11.1.tar.gz
tar xvf v0.11.1.tar.gz
rm -rf ./librdkafka
mv librdkafka-0.11.1 librdkafka
cd librdkafka/
./configure
cd ../../
node-gyp rebuild
==========
